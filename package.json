{
  "name": "evrocontayner-mail-server",
  "version": "2.0.0",
  "description": "Mail endpoint for Evrocontayner contact form with PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "security-check": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/security-check.ps1",
    "backup-db": "powershell -NoProfile -Command \"Copy-Item data/db.sqlite backups-server/db.backup-$(Get-Date -Format 'yyyyMMdd-HHmmss').sqlite\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "nodemailer": "^6.9.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  }
}
